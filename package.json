{
  "name": "@drivetech/node-nmea",
  "version": "2.0.1",
  "description": "Parser for NMEA sentences.",
  "main": "src",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier-standard 'src/**/*.js' 'test/**/*.js'",
    "commit": "commit",
    "pretest": "npm run lint -s && npm run format -s",
    "test": "nyc mocha"
  },
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/drivetech/node-nmea.git"
  },
  "keywords": [
    "nmea",
    "gps",
    "parser",
    "gprmc",
    "gpgga"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drivetech/node-nmea/issues"
  },
  "homepage": "https://github.com/drivetech/node-nmea#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "7.6.0",
    "@commitlint/prompt-cli": "7.6.1",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/git": "7.0.18",
    "@semantic-release/github": "5.5.8",
    "@semantic-release/npm": "5.3.5",
    "chai": "4.3.1",
    "eslint": "5.16.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "4.1.0",
    "husky": "1.3.1",
    "lint-staged": "8.2.1",
    "mocha": "5.2.0",
    "npm-github-config": "2.0.1",
    "nyc": "13.3.0",
    "nyc-config-common": "1.0.1",
    "prettier-standard": "8.0.1",
    "semantic-release": "15.14.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "no-console": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "coverage",
    "example.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ],
      "test/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "tonicExampleFilename": "example.js",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "extends": "npm-github-config"
  },
  "nyc": {
    "extends": "nyc-config-common"
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      "config:js-lib"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
